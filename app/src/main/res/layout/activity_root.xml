<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/second_plan_background"
    android:orientation="vertical"
    tools:context=".ui.root.RootActivity">

    <FrameLayout
        android:id="@+id/fragment_container_frame_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav_bar"
        android:layout_width="match_parent"
        app:menu="@menu/bottom_nav_menu"
        android:background="?attr/bottom_navigation_view"
        android:layout_height="wrap_content"
        app:itemIconTint="?attr/item_icon_tint"
        app:itemTextColor="?attr/item_text"
        app:labelVisibilityMode="selected"/>

</LinearLayout>