<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/bp_details_background"
    android:orientation="vertical"
    android:visibility="visible"
    tools:context=".ui.user.UserLoginFragment">

    <TextView
        android:id="@+id/heading_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_margin"
        android:gravity="center"
        android:text="Вход в приложение"
        android:textColor="?attr/default_text"
        android:textSize="16sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_margin"
        android:orientation="vertical">

        <EditText
            android:id="@+id/name_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#808080"
            android:gravity="center"
            android:hint="bob@test.com"
            android:inputType="textEmailAddress"
            android:maxLength="30"
            android:padding="10dp"
            android:textColor="?attr/default_text"
            android:textColorHint="#808080"
            android:textSize="15sp" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/password_one_text_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            app:boxBackgroundColor="@color/white"
            app:boxBackgroundMode="none"
            app:hintTextColor="@color/black"
            app:passwordToggleEnabled="true">

            <EditText
                android:id="@+id/password_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#808080"
                android:gravity="center"
                android:hint="numeric Password"
                android:inputType="numberPassword"
                android:maxLength="10"
                android:padding="10dp"
                android:textColor="?attr/default_text"
                android:textColorHint="#808080"
                android:textSize="15sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/login_button"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_margin"
            android:background="?attr/default_text"
            android:text="Login"
            android:textAllCaps="false"
            android:textColor="?attr/default_text"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/already_have_account_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_margin"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/recover_password_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="Востановить пароль"
            android:textColor="?attr/default_text"
            android:textSize="18sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/registration_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="Регистрация"
            android:textColor="?attr/default_text"
            android:textSize="18sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/anonymous_login_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="Вход без регистрации"
            android:textColor="?attr/default_text"
            android:textSize="18sp"
            android:visibility="invisible" />

    </LinearLayout>

</LinearLayout>