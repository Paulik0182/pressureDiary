<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/bp_details_background"
    android:orientation="vertical"
    tools:context=".ui.settings.reference.ReferenceFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:textSize="@dimen/size_text_reference"
        android:gravity="center"
        android:textColor="?attr/default_text"
        android:textStyle="bold"
        android:text="@string/libraries_used" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:layout_marginTop="@dimen/default_margin_top_bottom"
        android:layout_marginBottom="@dimen/default_margin_top_bottom">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/references_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbarStyle="outsideOverlay"
            android:scrollbars="vertical"
            tools:listitem="@layout/item_reference" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="@dimen/default_margin_top_bottom"
        android:layout_marginBottom="@dimen/default_margin_top_bottom">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/exit_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="ClickButton"
            android:text="@string/close"
            android:textColor="?attr/default_text"
            android:layout_marginTop="@dimen/default_margin"
            android:layout_marginBottom="@dimen/default_margin"
            android:drawableLeft="@drawable/ic_exit_fragment_24"
            android:textSize="@dimen/size_text_button"
            app:backgroundTint="?attr/button_background" />

    </LinearLayout>


</LinearLayout>